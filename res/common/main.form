		alignment = ALIGN_BOTTOM_RIGHT
		autoSize = AUTO_SIZE_WIDTH
		height = 10%
        consumeInputEvents = true
		
		button componentCancel {
			style = buttonStyle
			autoSize = AUTO_SIZE_WIDTH
			height = 100
			text = Cancel
		}
	}
}

