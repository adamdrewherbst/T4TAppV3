form componentMenu {
	theme = res/common/default.theme
	style = basicContainer
	layout = LAYOUT_VERTICAL
	zIndex = 50
	consumeInputEvents = true
	visible = false

	container header {
		style = hiddenContainer
		layout = LAYOUT_ABSOLUTE
		width = 100%
		autoSize = AUTO_SIZE_HEIGHT
        consumeInputEvents = true
		
		button back {
			style = buttonStyle
			autoSize = AUTO_SIZE_WIDTH
			height = 50
			alignment = ALIGN_LEFT
			text = Back to Instructions
		}
		label title {
			style = noBorder
			autoSize = AUTO_SIZE_WIDTH
			height = 120
			fontSize = 50
			alignment = ALIGN_HCENTER
		}
	}
	container wrapper {
		style = basicContainer
		layout = LAYOUT_ABSOLUTE
		scroll = SCROLL_VERTICAL
		size = 100%, 80%
        consumeInputEvents = true

		container instructions {
			style = basicContainer
			layout = LAYOUT_ABSOLUTE
			size = 100%, 100%
            consumeInputEvents = true

			container navigation {
				style = hiddenContainer
				size = 100%, 15%
				layout = LAYOUT_ABSOLUTE
				alignment = ALIGN_TOP
                consumeInputEvents = true

				button prev {
					style = buttonStyle
					autoSize = AUTO_SIZE_WIDTH
					height = 100
					text = Previous
					alignment = ALIGN_LEFT
				}
				button next {
					style = buttonStyle
					autoSize = AUTO_SIZE_WIDTH
					height = 100
					text = Next
					alignment = ALIGN_RIGHT
				}
			}
			container descriptionWrapper {
				style = hiddenContainer
				size = 80%, 80%
				alignment = ALIGN_BOTTOM_HCENTER
				layout = LAYOUT_VERTICAL
                consumeInputEvents = true

				label description {
					style = noBorder
					width = 100%
					height = 100%
					fontSize = 50
				}
			}
		}
		container components {
			style = hiddenContainer
			layout = LAYOUT_FLOW
			width = 100%
			autoSize = AUTO_SIZE_HEIGHT
			alignment = ALIGN_TOP
            consumeInputEvents = true
		}
	}
	container controls {
		style = hiddenContainer
